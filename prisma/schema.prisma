generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Admin {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}

model Room {
  id          Int      @id @default(autoincrement())
  name        String
  price       Int
  description String?
  images      RoomImage[]   // Relasi ke tabel gambar
  createdAt   DateTime @default(now())
}

model RoomImage {
  id      Int    @id @default(autoincrement())
  url     String
  roomId  Int
  room    Room   @relation(fields: [roomId], references: [id], onDelete: Cascade)
}
  
model Facility {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  images      FacilityImage[] // Maks 3 gambar
  createdAt   DateTime @default(now())
}

model FacilityImage {
  id         Int      @id @default(autoincrement())
  url        String
  facilityId Int
  facility   Facility @relation(fields: [facilityId], references: [id], onDelete: Cascade)
}

model Hero {
  id        Int      @id @default(autoincrement())
  singleton Boolean  @unique @default(true)
  title     String
  subtitle  String?
  imageUrl  String
  createdAt DateTime @default(now())
}

model Profile {
  id          Int      @id @default(autoincrement())
  description String
  image1Url    String
  image2Url    String
  createdAt   DateTime @default(now())
}

model FAQ {
  id        Int      @id @default(autoincrement())
  question  String
  answer    String
  createdAt DateTime @default(now())
}
